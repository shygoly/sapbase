{
  "name": "speckit-backend",
  "version": "1.0.0",
  "description": "Speckit ERP Backend - NestJS + PostgreSQL",
  "author": "Speckit Team",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "npm run start:dev",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --config jest.config.js",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:lifecycle-e2e": "jest --config ./test/jest-e2e.json --testPathPattern=ai-module-lifecycle.e2e-spec",
    "test:codegen-e2e": "jest --config ./test/jest-e2e.json --testPathPattern=code-generation-crud-stateflow.e2e-spec",
    "start:test": "NODE_ENV=test nest start",
    "start:test:dev": "NODE_ENV=test nest start --watch",
    "seed": "ts-node src/seeds/seed.ts",
    "seed:test": "ts-node src/seeds/test-data.seed.ts",
    "seed:mock": "ts-node src/seeds/mock-data.seed.ts",
    "generate:openapi": "ts-node --transpile-only src/scripts/generate-openapi.ts",
    "generate:postman": "ts-node --transpile-only src/scripts/generate-postman.ts",
    "generate:docs": "npm run generate:openapi && npm run generate:postman",
    "migrate:saas": "ts-node src/seeds/run-saas-migration.ts",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:saas": "ts-node -r tsconfig-paths/register src/migrations/run-migration.ts",
    "migration:saas:revert": "ts-node -r tsconfig-paths/register src/migrations/revert-migration.ts"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/platform-socket.io": "^10.3.0",
    "@nestjs/schedule": "^6.1.1",
    "@nestjs/websockets": "^10.3.0",
    "@nestjs/swagger": "^7.1.16",
    "@nestjs/typeorm": "^10.0.0",
    "@speckit/shared-schemas": "*",
    "@types/adm-zip": "^0.5.7",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonschema": "^0.0.5",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.5",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.8",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "jsonschema": "^1.5.0",
    "papaparse": "^5.4.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.0",
    "redis": "^5.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "semver": "^7.7.4",
    "stripe": "^20.3.1",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.19",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.3.0",
    "@types/cache-manager": "^4.0.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.10.0",
    "@types/papaparse": "^5.3.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "yaml": "^2.8.2"
  }
}
